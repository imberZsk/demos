.tab-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 108rpx;
    background: #FCFCFC;
    display: flex;
    padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-item {
    flex: 1;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

.tab-bar-item .cover-image {
    width: 48rpx;
    height: 48rpx;
}

.tab-bar-item .cover-view {
    font-size: 18rpx;
    line-height: 26rpx;
    margin-top: 8rpx;
}
